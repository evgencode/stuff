{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
        "@app/*": ["src/*"],
        "@assets/*": ["assets/*"]
    },
    "lib": [
      "dom",
      "es6",
      "es2015.promise",
      "es2016.array.include"
    ]
  },
  "exclude": [
    "node_modules",
    "etc"
  ],
  "include": [
      "./src/**/*",
      "./typings/*"
  ],
}
